<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="section"
            type="com.mollie.checkout.data.model.Section" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/appBackgroundColorLevel3"
        android:paddingStart="@dimen/space_16"
        android:paddingTop="@dimen/space_6"
        android:paddingEnd="@dimen/space_16"
        android:paddingBottom="@dimen/space_6">

        <TextView
            style="@style/AppTheme.TextView.Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{section.formattedDate}"
            tools:text="Section" />
    </FrameLayout>
</layout>